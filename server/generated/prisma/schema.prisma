generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int            @id @default(autoincrement())
  name          String
  email         String         @unique
  picture       String         @db.LongText
  tasks         Task[]
  qtasks        Qtask[]
  focusSessions FocusSession[]
}

model Task {
  id            String    @id @default(uuid())
  title         String
  created_at    DateTime  @default(now())
  due_date      DateTime?
  priority      String
  note          String?   @db.Text
  reason        String?
  status        String
  assigned_to   String?
  priority_tags Json?
  userId        Int
  user          User      @relation(fields: [userId], references: [id])

  @@map("tasks")
}

model Qtask {
  id            String   @id @default(uuid())
  date          DateTime
  workTasks     String   @db.LongText
  personalTasks String   @db.LongText
  notes         String   @db.LongText
  timeSpent     String
  userId        Int
  user          User     @relation(fields: [userId], references: [id])

  @@map("Qtask")
}

model FocusSession {
  id             String   @id @default(uuid())
  startTime      DateTime
  endTime        DateTime
  timeSpent      Int
  completedTasks Json
  createdAt      DateTime @default(now())
  taskChanges    Json?
  userId         Int
  user           User     @relation(fields: [userId], references: [id])

  @@index([userId], map: "idx_focus_sessions_userId")
  @@map("focus_sessions")
}
